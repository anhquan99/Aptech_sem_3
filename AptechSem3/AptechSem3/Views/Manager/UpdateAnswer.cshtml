
@{
    ViewBag.Title = "Update Answer";
    Layout = "~/Views/Shared/ManagerLayout.cshtml";
    AptechSem3.Models.QUESTION question= null;
    if (TempData["Question"] != null)
    {
        question = (AptechSem3.Models.QUESTION)TempData["Question"];
    }
    AptechSem3.Models.ANSWER answer = null;
    if (TempData["Answer"] != null)
    {
        answer = (AptechSem3.Models.ANSWER)TempData["Answer"];
    }
    string status;
                                            if (answer.STATUS == true)
                                            {
                                                status = "True";
                                            }
                                            else {
                                                status = "False";
                                            }
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Update Answer</h3>
                    </div>
                    <form action="@Url.Action("UpdateAnswerDB","Manager")" method="post">
                        <div class="card-body">

                            <div class="form-group">
                                <label>Answer Text</label>
                                <textarea class="form-control" rows="3" style="margin-top: 0px; margin-bottom: 0px; height: 91px;" disabled>@question.QUESTION1</textarea>
                            </div>

                            <input type="text" class="form-control" name="ANSWER_ID" value="@answer.ANSWER_ID" hidden />
                            <input type="text" class="form-control" name="QUESTION_ID" value="@answer.QUESTION_ID" hidden />
                            <input type="text" class="form-control" name="STATUS" value="@status" hidden />


                            <div class="form-group">
                                <label>Status</label>
                                <input type="text" class="form-control" value="@status" disabled>
                            </div>

                            <div class="form-group">
                                <label>Answer Text</label>
                                <textarea class="form-control" rows="3" name="ANSWER1" placeholder="Enter Answer Text..." style="margin-top: 0px; margin-bottom: 0px; height: 91px;">@answer.ANSWER1</textarea>
                            </div>

                            <!-- /.form group -->
                        </div>
                        <lable class="col-sm-12 text-danger">
                            @ViewBag.Error

                        </lable>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="col-sm-2">
                                <input type="submit" class="btn btn-primary" value="Submit" />
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>



</div>


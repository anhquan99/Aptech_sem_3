
@{
    ViewBag.Title = "Update Question";
    Layout = "~/Views/Shared/ManagerLayout.cshtml";
    AptechSem3.Models.QUESTION question= null;
    if (TempData["Question"] != null)
    {
        question = (AptechSem3.Models.QUESTION)TempData["Question"];
    }
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Update Question</h3>
                    </div>
                    <form action="@Url.Action("UpdateQuestionDB","Manager")" method="post">
                        <div class="card-body">


                            <input type="text" class="form-control" name="QUESTION_ID" value="@question.QUESTION_ID" hidden />

                            <div class="form-group">
                                <label>Category</label>
                                <select class="form-control" name="CATEGORY">
                                    <option value="GENERAL KNOWLEDGE" @if (question.CATEGORY == "GENERAL KNOWLEDGE") { @Html.Raw("Selected") }>General Knowledge</option>
                                    <option value="MATHEMATICS" @if (question.CATEGORY == "MATHEMATICS") { @Html.Raw("Selected") }>Mathematics</option>
                                    <option value="COMPUTER TECHNOLOGY" @if (question.CATEGORY == "COMPUTER TECHNOLOGY") { @Html.Raw("Selected") }>Computer Technology</option>

                                </select>
                            </div>

                            <div class="form-group">
                                <label>Point</label>
                                <select class="form-control" name="POINT">
                                    <option value="5" @if (question.POINT == 5) { @Html.Raw("Selected") }>5</option>
                                    <option value="10" @if (question.POINT == 10) { @Html.Raw("Selected") }>10</option>
                                    <option value="15" @if (question.POINT == 15) { @Html.Raw("Selected") }>15</option>

                                </select>
                            </div>

                            <div class="form-group">
                                <label>Point</label>
                                <input type="text" class="form-control" name="POINT" placeholder="Enter Point..." value="@question.POINT">
                            </div>

                            <div class="form-group">
                                <label>Question Text</label>
                                <textarea class="form-control" rows="3" name="QUESTION1" placeholder="Enter Question Text..." style="margin-top: 0px; margin-bottom: 0px; height: 91px;" required>@question.QUESTION1</textarea>
                            </div>

                            <!-- /.form group -->
                        </div>
                        <lable class="col-sm-12 text-danger">
                            @ViewBag.Error

                        </lable>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="col-sm-2">
                                <input type="submit" class="btn btn-primary" value="Submit" />
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>



</div>